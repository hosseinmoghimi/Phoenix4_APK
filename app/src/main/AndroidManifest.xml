<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khafonline.phoenix4">
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".volley.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Phoenix4">
        <activity
            android:name=".activity.MasterActivity"
            android:label="@string/title_activity_master"
            android:theme="@style/Theme.Phoenix4.NoActionBar"></activity>
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/activity_home_title"
            android:theme="@style/Theme.Phoenix4.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.CategoryActivity"
            android:label="@string/activity_home_title"
            android:theme="@style/Theme.Phoenix4.NoActionBar">
        </activity>

        <activity
            android:name=".activity.ProductDetailActivity"
            android:label="@string/activity_home_title"
            android:theme="@style/Theme.Phoenix4.NoActionBar">



        </activity>
        <activity
            android:name=".activity.ProductActivity"
            android:label="@string/activity_home_title"
            android:theme="@style/Theme.Phoenix4.NoActionBar">
        </activity>





        <activity
            android:name=".activity.ProfileActivity"
            android:label="@string/activity_home_title"
            android:theme="@style/Theme.Phoenix4.NoActionBar">
        </activity>




        <activity
            android:name=".activity.CartActivity"
            android:label="@string/activity_home_title"
            android:theme="@style/Theme.Phoenix4.NoActionBar">
        </activity>



    </application>

</manifest>