<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--badge_danger ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### -->
    <style name="badge" parent="AppTheme">
        <item name="button_font">IRAN_Sans</item>
        <item name="android:textColor">@color/badge_text_color</item>
        <item name="android:textSize">@dimen/badge_text_size</item>
        <!-- <item name="android:height">@dimen/Button_height</item>-->
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <!--badge_danger ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### -->
    <style name="badge_danger" parent="badge">
        <item name="android:background">@drawable/badge_danger</item>

        <item name="android:textColor">@color/badge_danger_text</item>
    </style>


    <!--badge_danger ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### -->
    <style name="badge_success" parent="badge">
        <item name="android:background">@drawable/badge_success</item>
        <item name="android:textColor">@color/badge_success_text</item>
    </style>

    <!--Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### Button ### -->
    <style name="Button" parent="AppTheme">
        <item name="android:background">@drawable/my_button</item>
        <item name="android:textColor">@color/my_button_text_color</item>
        <item name="android:textSize">@dimen/my_button_text</item>
        <!-- <item name="android:height">@dimen/Button_height</item>-->
        <item name="button_font">IRAN_Sans</item>
        <item name="android:paddingBottom">@dimen/my_button_padding_bottom</item>
        <item name="android:paddingTop">@dimen/my_button_padding_top</item>
        <item name="android:paddingRight">@dimen/my_button_padding_right</item>
        <item name="android:paddingLeft">@dimen/my_button_padding_left</item>

        <item name="android:layout_marginBottom">@dimen/my_button_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/my_button_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/my_button_margin_left</item>
        <item name="android:layout_marginRight">@dimen/my_button_margin_right</item>

    </style>


    <!--TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ###TextView ### -->

